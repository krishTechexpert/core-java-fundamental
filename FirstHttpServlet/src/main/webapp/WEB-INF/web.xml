<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee
         http://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

  <!-- Servlet Configuration -->
  <!--agar kisi package k ander hoti toh kuch es trah s likty
       <servlet-class>com.example.FirstServletDemo</servlet-class>
   -->
  <servlet>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>RegistrationServlet</servlet-class>
  </servlet>

  <!-- Servlet URL Mapping -->
  <!-- servlet first check url-pattern  means kis url endpoints s call hoga servlet -->
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

</web-app>
